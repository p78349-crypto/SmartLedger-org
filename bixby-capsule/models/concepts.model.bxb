// ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

decimal (AssetAmount) {
  description (자산 금액)
  min (0)
}

text (AssetName) {
  description (자산명)
}

text (AssetLocation) {
  description (위치 - 은행/앱/보관장소)
}

text (AssetMemo) {
  description (자산 메모)
}

enum (AssetCategory) {
  description (자산 종류)
  symbol (cash) { description (현금) }
  symbol (deposit) { description (예금/적금) }
  symbol (stock) { description (소액 투자) }
  symbol (other) { description (기타 실물 자산) }
}

// ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
// 간편 지출(1줄) 관련 개념
// ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

text (QuickExpensePayment) {
  description (결제 수단 - 신용카드/현금/계좌이체/페이 등)
}

text (QuickExpenseStore) {
  description (매장/상호)
}

// ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
// Structures
// ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

structure (Transaction) {
  description (거래 정보)
  property (type) {
    type (TransactionType)
    min (Required)
  }
  property (amount) {
    type (TransactionAmount)
    min (Optional)
  }
  property (description) {
    type (TransactionDescription)
    min (Optional)
  }
  property (category) {
    type (CategoryName)
    min (Optional)
  }
}

structure (AppLaunchResult) {
  description (앱 실행 결과)
  property (success) {
    type (core.Boolean)
    min (Required)
  }
  property (deepLink) {
    type (core.Text)
    min (Required)
  }
  property (message) {
    type (core.Text)
    min (Optional)
  }
}

// 거래 추가 미리보기 (확인 단계)
structure (TransactionAddPreviewResult) {
  description (거래 추가 미리보기)
  property (type) {
    type (TransactionType)
    min (Required)
  }
  property (amount) {
    type (TransactionAmount)
    min (Optional)
  }
  property (quantity) {
    type (TransactionQuantity)
    min (Optional)
  }
  property (unit) {
    type (TransactionUnit)
    min (Optional)
  }
  property (unitPrice) {
    type (TransactionUnitPrice)
    min (Optional)
  }
  property (description) {
    type (TransactionDescription)
    min (Optional)
  }
  property (category) {
    type (CategoryName)
    min (Optional)
  }
  property (memo) {
    type (TransactionMemo)
    min (Optional)
  }
  property (paymentMethod) {
    type (QuickExpensePayment)
    min (Optional)
  }
  property (store) {
    type (QuickExpenseStore)
    min (Optional)
  }
  property (message) {
    type (core.Text)
    min (Optional)
  }
}

