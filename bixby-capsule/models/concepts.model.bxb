decimal (TransactionAmount) {
  description (거래 금액)
  min (0)
}

decimal (TransactionQuantity) {
  description (거래 수량)
  min (0)
}

text (TransactionUnit) {
  description (거래 단위 - 개, 잔, kg 등)
}

decimal (TransactionUnitPrice) {
  description (단가)
  min (0)
}

text (TransactionDescription) {
  description (상품명 또는 거래 설명)
}

text (TransactionMemo) {
  description (거래 메모)
}

text (CategoryName) {
